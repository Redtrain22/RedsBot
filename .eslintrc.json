{
	"env": {
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 2020
	},
	"extends": ["prettier", "eslint:recommended"],
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": "error",
		"no-console": ["error"],
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"keyword-spacing": [
			"error",
			{
				"before": true,
				"after": true
			}
		],
		"space-before-blocks": [
			"error",
			{
				"functions": "always",
				"keywords": "always",
				"classes": "always"
			}
		],
		"prefer-const": [
			"error",
			{
				"destructuring": "any",
				"ignoreReadBeforeAssign": false
			}
		],
		"no-unused-vars": ["error", { "args": "none" }],
		"no-var": ["error"],
		"default-case-last": ["error"],
		"no-useless-escape": ["error"],
		"require-await": ["error"],
		"camelcase": ["error"],
		"no-unsafe-optional-chaining": ["error"]
	}
}
